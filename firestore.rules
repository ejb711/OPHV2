// firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    // user profiles -------------------------------------------------
    match /users/{uid} {
      // users can read their own profile
      allow read  : if request.auth != null && request.auth.uid == uid;
      
      // admins can read any user document
      allow read  : if request.auth.token.role == 'admin';

      // admins can write to any user document
      allow write : if request.auth.token.role == 'admin';
    }

    // Allow admins to list/query the users collection
    match /users/{document=**} {
      allow list : if request.auth.token.role == 'admin';
    }

    // everything else stays locked-down for now
    match /{document=**} {
      allow read, write: if false;
    }
  }
}