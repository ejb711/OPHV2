{
  
  "firestore": {
    "database": "(default)",
    "location": "us-central1",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "client/dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [ { "source": "**", "destination": "/index.html" } ],
    "predeploy": [ "npm --prefix client run build" ]
  },
  "functions": {
    "source": "functions",     
    "runtime": "nodejs20"  
  }
}
